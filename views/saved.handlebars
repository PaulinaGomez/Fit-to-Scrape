<nav class="navbar navbar-expand-lg navbar-light bg-primary">
  <a class="navbar-brand" href="#">Mongo Scraper</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/home">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/saved" id="allSaved">Saved Articles</a>
      </li>
    </ul>
    <button type="button" class="btn btn-warning" id="scrapeAgain">
      <a href="/">
        Scrape New Articles!
      </a>
    </button>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Saved Articles</h1>
    <p class="lead">
      Your Saved Articles
    </p>
  </div>
</div>
{{#each saved}}
<div class="card text-white bg-primary">
  <div class="card-header">
    <h5 class="card-title"><a href={{this.link}}>{{this.title}}</a></h5>
    <button type="button" class="btn btn-warning iAmUnsaved" id={{this._id}}>
      <a href="/unsaved">
        Unsave Article
      </a>
    </button>

    <button type="button" class="btn btn-warning" id="myBtn">
      Add a Note!
    </button>

  </div>
  <div class="card-body">
    <p class="card-text">
      {{this.description}}
    </p>
  </div>
</div>
{{/each}}

<!-- The Modal -->
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <h1>Saved Notes</h1>
    <br>
    <div>No Saved Notes</div>
    <br>
    <h1>Add a new note to this article. . . </h1>
    <br>
    <input class="userText" type="text" placeholder="Enter Note" name="userText">
    <br>
    <button type="button" class="btn btn-warning iAddNote" id="myBtn">
      Save Note!
    </button>
  </div>
</div>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/app.js"></script>